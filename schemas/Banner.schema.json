{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Banner",
  "definitions": {
    "Banner": {
      "type": "object",
      "properties": {
        "banner": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ContentBanner"
          }
        }
      },
      "required": [
        "banner"
      ],
      "additionalProperties": false
    },
    "ContentBanner": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "startDuration": {
          "type": "string"
        },
        "duration": {
          "type": "string"
        },
        "featured": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "type": {
          "type": "string",
          "enum": [
            "Beginner",
            "Permanent",
            "Character",
            "Weapon",
            "Chronicled"
          ]
        },
        "id": {
          "type": "string"
        }
      },
      "required": [
        "version",
        "name",
        "startDuration",
        "duration",
        "featured",
        "type",
        "id"
      ],
      "additionalProperties": false
    }
  }
}